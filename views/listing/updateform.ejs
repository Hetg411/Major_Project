<% layout("/layout/boilerplate.ejs") -%>
<body>
  <div class="container mt-5">
    <h1 class="mb-4">Update Information</h1>
    <div class="row justify-content-center">
      <div class="col-md-4">
        <form method="POST" action="/updateindex/<%= data._id %>?_method=PUT" enctype="multipart/form-data">

  <div class="mb-3">
    <label for="title" class="form-label">Title:</label>
    <input type="text" id="title" value="<%= data.title %>" name="listing[title]" class="form-control">
  </div>

  <div class="mb-3">
    <label for="description" class="form-label">Description:</label>
    <input type="text" id="description" value="<%= data.description %>" name="listing[description]" class="form-control">
  </div>

  <div class="mb-3">
    <label for="price" class="form-label">Price:</label>
    <input type="number" id="price" value="<%= data.price %>" name="listing[price]" class="form-control">
  </div>

  <div class="mb-3">
    <label for="location" class="form-label">Location:</label>
    <textarea id="location" name="listing[location]" class="form-control"><%= data.location %></textarea>
  </div>
<div>
  Original Image: <br>
  <div><img src="<%= originalurl %>" class="ogimg"  alt=""><br><br></div>
</div>
  <div class="mb-3">
    <label for="image" class="form-label">Upload New Image:</label>
    <input type="file" id="image" name="listing[img]" class="form-control">
  </div>

  <div class="mb-3">
    <label for="country" class="form-label">Country:</label>
    <input type="text" id="country" value="<%= data.country %>" name="listing[country]" class="form-control">
  </div>

  <button class="btn btn-primary">Submit</button><br><br>

</form>

      </div>
    </div>
  </div>
</body>
