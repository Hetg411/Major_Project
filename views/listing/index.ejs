<% layout("/layout/boilerplate.ejs") -%>
<style>
  .filters {
  display: flex;
  overflow-x: auto;
  white-space: nowrap;
  gap: 1.5rem;
  padding: 1rem;
  scrollbar-width: none; /* Firefox */
  -ms-overflow-style: none;  /* IE 10+ */
}

.filters::-webkit-scrollbar {
  display: none; /* Chrome, Safari */
}

.filter {
  flex: 0 0 auto;
  text-align: center;
  opacity: 0.7;
}

.filter p {
  font-size: 0.9rem;
}

.filter:hover {
  opacity: 1;
  cursor: pointer;
}
  .tax-info{
    display: none;
  }
  .tax-information{
    border: 1px solid black;
    height: 2.9rem;
    width: 16rem;
    padding: 1rem;
    padding-right: 0rem;
    display: flex;
    justify-content: center;
    align-items:center;
    border-radius: 1rem;
    margin-left: 3rem;
    margin-top: 0.3rem;
  }
 

</style>
<body>
<div class="main-wrapper">
  <div class="filters navbar-expand-lg">
    <div class="filter">
      <div><i class="fa-solid fa-fire"></i></div>
      <div><p>Trending</p></div>
    </div>
    
    <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <div><p>Bedroom</p></div>
    </div>

    <div class="filter">
      <div><i class="fa-solid fa-city"></i></div>
      <div><p>Iconic Cities</p></div>
    </div>
    
    <div class="filter">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <div><p>Mountain</p></div>
    </div>

    <div class="filter filter hide-on-small">
      <div><i class="fa-solid fa-campground"></i></div>
      <div><p>Camping</p></div>
    </div>
    
    <div class="filter filter hide-on-small">
      <div><i class="fa-solid fa-snowflake"></i></div>
      <div><p>Arctic</p></div>
    </div>

    <div class="filter filter hide-on-small">
      <div><i class="fa-solid fa-cow"></i></div>
      <div><p>Farm</p></div>
    </div>
    
    <div class="filter filter hide-on-small">
      <div><i class="fa-solid fa-water"></i></div>
      <div><p>Lake Front</p></div>
    </div>

    <div class="filter filter hide-on-small">
      <div><i class="fa-solid fa-umbrella-beach"></i></div>
      <div><p>Beach</p></div>
    </div>
    
    <div class="filter filter hide-on-small">
      <div><i class="fa-solid fa-binoculars"></i></div>
      <div><p>Amazing Views</p></div>
    </div>
     <div class="form-check form-switch tax-information">
  <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
  <label class="form-check-label" for="switchCheckDefault">Display Total After Taxes</label>
</div>
    

    </div>
  <div class="index mt-0">
     <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4 mt-0">
  <% for(let data of alldata){ %>
    <div class="col">
      <a href="/home/<%= data._id %>" style="text-decoration: none; color: inherit;">
        <div class="card h-100 border-0 shadow-sm shaddow">
          <img src="<%= data.image.url %>" class="card-img-top " alt="..." style="height: 200px; object-fit: cover;">
          <div class="card-body">
            <p class="card-text mb-0">
              <b><%= data.title %></b> <br/>
              â‚¹ <%= data.price.toLocaleString("en-IN") %> <i class="tax-info">+ 18% GST</i>
            </p> 
          </div>
        </div>
      </a>
    </div>
  <% } %>
</div>
  </div>
 
</div>

<script>
  let texswitch=document.getElementById("switchCheckDefault");
  texswitch.addEventListener("click",()=>{
    let tax=document.getElementsByClassName("tax-info");
   // console.log(tax);
    for( info of tax){
      if(info.style.display=="inline"){
        info.style.display="none";
      }else{
        info.style.display="inline";
      }
    }
  })
</script>

</body>



