<% layout("/layout/boilerplate.ejs") -%>
<style>
  .login{
    width: 34vw;
     border-radius: 0.5rem;
     border-color: rgb(180, 177, 177);
     padding: 0.4rem;
     margin: 0.2rem;
  }
  .loginform{
    margin: 0.5rem;
    display: flex;
    justify-content: center;
    text-decoration:solid;
    font-weight:bold;  
   
  }
  .heading{
    margin-top: 3rem;
    display: flex;
    justify-content: center;
  }
  .login-btn{
    display: flex;
    justify-content: center;
    margin: auto;
     border-radius: 0.4rem;
    padding: 0 0.5rem 0 0.5rem;
  }
</style>
<body>
    <div class="heading">
<h1>Create account</h1>
    </div>
    
   <div class="loginform">
     <form method="POST" action="/home/adduser">
       <div>
         <label for="email">Enter Your E-mail:
            <div><input type="email" name="email" placeholder="Enter Email-ID" class="login"></div>
        </label>
       </div><br><br>
        
       <div>
        <label for="username">Enter Your Username:
           <div> <input type="text" name="username" placeholder="Enter Username" class="login"></div>
        </label>
       </div><br><br>

        <div>

             <label for="password">Enter Your Password:
            <div><input type="password" name="password" placeholder="Enter Password" class="login"></div>
        </label>
        
        </div><br>
        <button class="login-btn">Sign in<br></button>
    </form> 
   </div>
</body>
